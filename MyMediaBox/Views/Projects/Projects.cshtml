@model MyMediaBox.Models.AllProjects

@{
    ViewBag.Title = "Projects";
}

<h2>Projects</h2>

<div>
    <h4>AllProjects</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
    <table>
        <thead>
            <tr>
                <th>Project ID</th>
                <th>Project Number</th>
                <th>Submission Type</th>
                <th>Submission ID</th>
                <th>Submission Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var proj in @Model.Proj)
            {
                if (proj.AllSubmissions == null)
                {
                    <tr>
                        <td>@proj.ProjectID</td>
                        <td>@proj.ProjectNumber</td>
                    </tr>
                }
                else
                {
                    foreach (var sub in proj.AllSubmissions)
                    {
                        <tr>
                            <td>@proj.ProjectID</td>
                            <td>@proj.ProjectNumber</td>
                            <td>@sub.Type</td>
                            <td>@sub.SubmissionID</td>
                            <td>@sub.SubmissionNumber</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>   
</div>
